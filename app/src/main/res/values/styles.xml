<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="welcome">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="welcome_hello">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="login">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#00B147</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#8000B147</item>
    </style>

    <style name="register_create">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/proza_libre</item>
    </style>

    <style name="register">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
